#include "stdio.h" // ввод и вывод.
#include "locale.h" // подключение библиотеки языков.
int main() // функция с пустым аргументом.
{
    setlocale(LC_ALL, "Rus"); // подключение русского языка.
    int a, b, P, S; // объявление переменных.
    printf("ВВЕДИТЕ ДЛИНУ ПРЯМОУГОЛЬНИКА: "); // вывод в консоль.
    scanf_s("%d", &a); // занос в переменную.
    printf("ВВЕДИТЕ ШИРИНУ ПРЯМОУГОЛЬНИКА: "); // вывод в консоль.
    scanf_s("%d", &b); // занос в переменную.
    S = a * b; // подсчёт площади.
    printf("ПЛОЩАДЬ ПРЯМОУГОЛЬНИКА = %d\n", S); // вывод результата.
    P = 2 * (a + b); // подсчёт периметра.
    printf("ПЕРИМЕТР ПРЯМОУГОЛЬНИКА = %d\n", P); // вывод результата.
    return 0; // конец (^_^).
}
