#include <limits.h>
#include <stdio.h>
#include <locale.h>
#include <math.h>
int main()
{
    float x1, x2, y1, y2, result, A, B, C, AC, BC, AB, X1, X2, Y1, Y2, S, P, X3, Y3, p;
    int BAIT; int SS = 0, BB = 0;
    setlocale(LC_ALL, "Rus");
    printf_s("1. Найти количество полных килобайтов, которые занимает данный файл.\n");
    printf_s("2. Найти количество отрезков B, размещенных на отрезке A.\n");
    printf_s("3. Найти длину незанятой части отрезка A.\n");
    printf_s("4. Ввести двузначное число. Вывести число, полученное при перестановке цифр исходного числа.\n");
    printf_s("5. Ввести трехзначное число. В нем зачеркнули первую слева цифру и приписали ее справа. Вывести полученное число.\n");
    while (1)
    {
        int op;
        scanf_s("%d", &op);
        switch (op)
        {
        case 1:
            printf("Введите размер файла в байтах: "); scanf_s("%d", &BAIT);
            printf("Размер файла в килобайтах : %d\n", (BAIT / 1024));
            printf_s("Выберите цифру от 1 до 5: ");
            break;
        case 2:
            if (SS >= BB)
            {
                printf("Введите длину отрезка A: "); scanf_s("%i", &SS);
                printf("Введите длину отрезка B: "); scanf_s("%i", &BB);
                printf("Количество отрезков B, размещенных на отрезке A: %i\n", SS / BB);
                printf_s("Выберите цифру от 1 до 5: ");
            }
            else
            {
                printf("Число А должно быть больше числа В \n");
                printf_s("Выберите цифру от 1 до 5: ");
            }
            
            break;
        case 3:
            if (SS >= BB)
            {
                printf("Введите длину отрезка A: "); scanf_s("%i", &SS);
                printf("Введите длину отрезка B: "); scanf_s("%i", &BB);
                printf("Длина незанятой части отрезка A: %i\n", SS % BB);
                printf_s("Выберите цифру от 1 до 5: ");
            }
            else
            {
                printf("Число А должно быть больше числа В \n");
                printf_s("Выберите цифру от 1 до 5: ");
            }
            break;
        case 4:
            printf("Введите двузначное число: "); scanf_s("%d", &BAIT);
            printf("Число, полученное при перестановке цифр исходного числа : %d\n", (BAIT / 10) + (BAIT % 10) * 10);
            printf_s("Выберите цифру от 1 до 5: ");
            break;
        case 5:
            printf("Введите трёхзначное число: "); scanf_s("%d", &BAIT);
            printf("Число, полученное при работе с исходным числом : %d\n", BAIT % 100 * 10 + BAIT / 100);
            printf_s("Выберите цифру от 1 до 5: ");
            break;
        default:
            printf_s("Ошибка! Введите число от 1 до 5.\n");
            return 0;

        }
    }
}
