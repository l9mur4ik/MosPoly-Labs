#include <limits.h>
#include <stdio.h>
#include <locale.h>
#include <math.h>
int main()
{
    int N, k, n, a, fff, b, c, sq, s, ost, y, w;
    setlocale(LC_ALL, "Rus");
    printf_s("1. Найти количество секунд, прошедших с начала последней минуты.\n");
    printf_s("2. Определить номер дня недели для K-го дня года, если известно, что в этом году 1 января было понедельником.\n");
    printf_s("3. Определить номер дня недели для K-го дня года, если известно, что в этом году 1 января было днем недели с номером N.\n");
    printf_s("4. Найти количество квадратов, размещенных на прямоугольнике, а также площадь незанятой части прямоугольника.\n");
    printf_s("5. Определить соответствующий заданному году номер столетия\n");
    while (1)
    {
        int op;
        scanf_s("%d", &op);
        switch (op)
        {
        case 1:
            printf("Введите количество секунд: "); scanf_s("%i", &N);
            printf_s("Количество секунд, прошедших с начала последней минуты: %i\n", N % 60);
            printf("Выберите цифру от 1 до 5: ");
            break;
        case 2:
            printf("Введите номер дня: "); scanf_s("%i", &k);
            if ((k >= 1) && (k <= 365))
            {
                if (k % 7 == 1)
                    printf("%i день будет понедельником.\n ", k);
                if (k % 7 == 2)
                    printf("%i день будет вторником.\n", k);
                if (k % 7 == 3)
                    printf("%i день будет средой.\n", k);
                if (k % 7 == 4)
                    printf("%i день будет четвергом.\n", k);
                if (k % 7 == 5)
                    printf("%i день будет пятницей.\n", k);
                if (k % 7 == 6)
                    printf("%i день будет субботой.\n", k);
                if (k % 7 == 0)
                    printf("%i день будет воскресеньем.\n", k);
            }
            printf_s("Выберите цифру от 1 до 5: ");
            break;
        case 3:
            printf("Введите номер дня: "); scanf_s("%i", &k);
            if ((k >= 1) && (k <= 365))
            {
                printf("1 Января было (понедельник - 1, вторник - 2 и т.д.): "); scanf_s("%i", &n);
                if ((n >= 1) && (n <= 7))
                {
                    a = ((k + n - 2) % 7) + 1;
                }
                else
                {
                    printf("Ошибка! Нужно ввести число от 1 до 7.\n");
                }
                printf("Номер дня недели: %i\n", a);
            }
            else
            {
                printf("Ошибка! Номер дня должен лежать в диапазоне от 1 до 365.\n");
            }
            printf_s("Выберите цифру от 1 до 5: ");
            break;
        case 4:
            printf("Введите А: "); scanf_s("%i", &a);
            printf("Введите В: "); scanf_s("%i", &b);
            printf("Введите С: "); scanf_s("%i", &c);
            sq = (a / c) * (b / c);
            s = a * b - sq * pow(c, 2);
            printf("Количество квадратов, размещенных на прямоугольнике = %i\nПлощадь незанятой части прямоугольника = %i\n", sq, s);
            printf("Выберите цифру от 1 до 5: ");
            break;
        case 5:
            printf("Введите год: "); scanf_s("%i", &y);
            w = (y / 100) + 1;
            printf("%i год это %i век\n", y, w);
            printf_s("Выберите цифру от 1 до 5: ");
            break;
        default:
            printf_s("Ошибка! Введите число от 1 до 5.\n");
            return 0;
        }
    }
}
