#include <iostream>
#include <Windows.h>
#include <conio.h>
#include <stdio.h>
using namespace std;

float PowerA3(float A1)
{
    return pow(A1, 3);
}

int Sign(int x)
{
    if (x <= -1)
    {
        return -1;
    }
    else if (x == 0)
    {
        return 0;
    }
    else if (x >= 1)
    {
        return 1;
    }
}

float RingS(float R1, float R2)
{
    float S1, S2;
    S1 = pow(R1, 2) * 3.14;
    S2 = pow(R2, 2) * 3.14;
    return S1 - S2;
}

int Quarter(int X, int Y)
{
    if (X > 0 && Y > 0)
    {
        return 1;
    }
    else if (X < 0 && Y > 0)
    {
        return 2;
    }
    else if (X < 0 && Y < 0)
    {
        return 3;
    }
    else if (X > 0 && Y < 0)
    {
        return 4;
    }
    return 0;
}

float Fact2(int N)
{
    float summ = 1;
    if (N % 2 == 0)
    {
        for (int i = 2; i <= N; i += 2)
        {
            summ *= i;
        }
        return summ;
    }
    else
    {
        for (int i = 1; i <= N; i += 2)
        {
            summ *= i;
        }
        return summ;
    }
}

int one()
{
    float A1, A2, A3, A4, A5; 
    cout << "Введите первое число: " << endl; cin >> A1;
    cout << "Введите второе число: " << endl; cin >> A2;
    cout << "Введите третье число: " << endl; cin >> A3;
    cout << "Введите четвертое число: " << endl; cin >> A4;
    cout << "Введите пятое число: " << endl; cin >> A5;
    cout << "3 степень первого числа: " << PowerA3(A1) << endl;
    cout << "3 степень второго числа: " << PowerA3(A2) << endl;
    cout << "3 степень третьего числа: " << PowerA3(A3) << endl;
    cout << "3 степень четвертого числа: " << PowerA3(A4) << endl;
    cout << "3 степень пятого числа: " << PowerA3(A5) << endl;
    return 0;
}

int two()
{
    float A, B, otv = 0;  
    cout << "Введите A: " << endl; cin >> A;   
    cout << "Введите B: " << endl; cin >> B;   
    otv = Sign(A) + Sign(B);
    cout << otv << endl;
    return 0;
}

int three()
{
    float R1, R2, R3, R4, R5, R6;   
    cout << "Введите радиус большей окружности первого кольца: " << endl; cin >> R1;
    cout << "Введите радиус меньшей окружности первого кольца: " << endl; cin >> R2;
    if (R1 <= R2)
    {
        cout << "Ошибка ввода!" << endl;
        return 0;
    }  
    cout << "Введите радиус большей окружности второго кольца: " << endl; cin >> R3;
    cout << "Введите радиус меньшей окружности второго кольца: " << endl; cin >> R4;
    if (R3 <= R4)
    {
        cout << "Ошибка ввода!" << endl;
        return 0;
    }
    cout << "Введите радиус большей окружности третьего кольца: " << endl; cin >> R5;
    cout << "Введите радиус меньшей окружности четвертого кольца: " << endl; cin >> R6;
    if (R5 <= R6)
    {
        cout << "Ошибка ввода!" << endl;
        return 0;
    }
    cout << RingS(R1, R2) << endl;
    cout << RingS(R3, R4) << endl;
    cout << RingS(R5, R6) << endl;
    return 0;
}

int four()
{
    int X1, Y1, X2, Y2, X3, Y3;    
    cout << "Введите координату X первой точки: " << endl; cin >> X1;
    cout << "Введите координату Y первой точки: " << endl; cin >> Y1;
    cout << "Введите координату X второй точки: " << endl; cin >> X2;
    cout << "Введите координату Y второй точки: " << endl; cin >> Y2;
    cout << "Введите координату X третьей точки: " << endl; cin >> X3;
    cout << "Введите координату Y третьей точки: " << endl; cin >> Y3;
    if ((X1 == 0 || Y1 == 0) || (X2 == 0 || Y2 == 0) || (X3 == 0 || Y3 == 0))
    {   
        cout << "Ошибка ввода" << endl;
        return 0;
    }
    cout << "Первая точка расположена в " << Quarter(X1, Y1) << " четверти" << endl;
    cout << "Вторая точка расположена в " << Quarter(X2, Y2) << " четверти" << endl;
    cout << "Третья точка расположена в " << Quarter(X3, Y3) << " четверти" << endl;
    return 0;
}

int five()
{
    float X;
    cout << "Введите положительное число: " << endl; cin >> X;
    cout << "Двойной факториал этого числа равен: " << Fact2(X) << endl;
    return 0;
}

int main()
{
    setlocale(LC_ALL, "Rus");
    int isContinue = 1;
    int whatToDo = 0;
    do
    {
        cout << "Выберите задание:\n 1) Найти третьи степени пяти данных чисел. \n";
        cout << " 2) С помощью функции найти значение выражения Sign(A) + Sign(B) для данных вещественных чисел A и B." << endl;
        cout << " 3) С помощью функции найти площади трех колец, для которых даны внешние и внутренние радиусы." << endl;
        cout << " 4) С помощью функции найти номера координатных четвертей для трех точек с данными ненулевыми координатами" << endl;
        cout << " 5) Описать функцию Fact2(N) вещественного типа, вычисляющую двойной факториал" << endl;
        cin >> whatToDo;
        switch (whatToDo)
        {
        case (1):
            one();
            break;
        case (2):
            two();
            break;
        case (3):
            three();
            break;
        case (4):
            four();
            break;
        case (5):
            five();
            break;
        default:
            cout << "Ошибка ввода!";
            break;
        }
        cout << "Для выхода введите \"0\"\nДля продолжения введите любое число." << endl;
        cin >> isContinue;
    } while (isContinue);
}
